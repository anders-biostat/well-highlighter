<?xml version='1.0' encoding='utf-8'?>
<widget id="de.uni-heidelberg.zmbh.anders.well-highlighter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Well Highlighter</name>
    <description>
        This application facilitates pipetting by automaticly storing sample barcodes and highlighting the well that 
        should be filled at any given moment.
    </description>
    <author email="sanders@fs.tum.de" href="http://www.zmbh.uni-heidelberg.de/anders">
        Simon Anders
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
